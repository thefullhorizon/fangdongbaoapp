<resources>

    <style name="MyDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="MyDialog_Trans" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <style name="Dialog.Animation.FromBottom" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/trans_from_bottom</item>
        <!--<item name="android:windowExitAnimation">@anim/popup_exit</item>-->
    </style>

    <style name="Dialog.Animation.FromTop" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/trans_from_top</item>
        <!--<item name="android:windowExitAnimation">@anim/popup_exit</item>-->
    </style>

    <style name="Dialog.Animation.Scale" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/scale_out</item>
        <!--<item name="android:windowExitAnimation">@anim/popup_exit</item>-->
    </style>

</resources>
