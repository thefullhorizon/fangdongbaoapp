<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d4dce1"
    android:orientation="vertical">

    <com.hx.fdb.ui.widget.CommonTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp"
        android:lineSpacingExtra="4dp"
        android:text="为防止骚扰，我们会为您免费开通联通小号；根据工信部电话实名制的要求，发放联通小号需进行实名认证。"
        android:textColor="#757575"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="13dp"
        android:paddingLeft="16dp"
        android:paddingTop="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="姓名"
            android:textColor="@color/color_FF212121"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/nameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:background="@color/transparent"
            android:hint="请输入你的真实姓名"
            android:textColor="@color/color_FF212121"
            android:textColorHint="#bdbdbd"
            android:textSize="22sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="16dp">

        <include layout="@layout/line_horizontal" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="13dp"
        android:paddingLeft="16dp"
        android:paddingTop="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="身份证号"
            android:textColor="@color/color_FF212121"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/idTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:background="@color/transparent"
            android:hint="请输入您的身份证号码"
            android:textColor="@color/color_FF212121"
            android:textColorHint="#bdbdbd"
            android:textSize="22sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="16dp">

        <include layout="@layout/line_horizontal" />
    </LinearLayout>

    <com.hx.fdb.ui.widget.clickview.ButtonView
        android:id="@+id/checkBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_007aff"
        android:text="提交验证"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>